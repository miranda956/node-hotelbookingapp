<div id="login">
        <h3 class="text-center text-white pt-5">Login form</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="admin/login" method="POST">
                            <h3 class="text-center text-info">Login</h3>
                            <div class="form-group">
                                <label for="email" class="text-info">Email:</label><br>
                                <input type="text" name="email" id="email" class="form-control">
                                <p class="validate" id="email-validate" style="display:none;">Please enter your email.</p>
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Password:</label><br>
                                <input type="text" name="password" id="password" class="form-control">
                                <p class="validate" id="password-validate" style="display:none;">Please enter your password .</p>
                            <button type="submit" class="btn btn default" onclick="return empty()">login</button>
                            </div>
                            <div id="register-link" class="text-right">
                                <a href="admin/signup" class="text-info">Register here</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function empty(){
            var email=$("#email").val();
            var password=$("#password").val();
            var validate=true;
        
        if(!email){
            $("#email-valiadate").show();
            validate=false;
        }else if(email){
            $("#email-validate").hide();
        }
        if(!password){
            $("#password-validate").show();
            validate=false;

        }else if(password){
            $("#password-validate").hide();

        }
        return validate;
        }
    </script>